<nav class="top-nav">
  <div class="nav-brand">
    <% if (breadcrumbs && breadcrumbs.length > 1) { %>
      <div class="breadcrumb breadcrumb-inline">
        <% breadcrumbs.forEach((crumb, index) => { %>
          <% if (index > 0) { %>
            <span class="breadcrumb-sep">/</span>
          <% } %>
          <% if (index < breadcrumbs.length - 1) { %>
            <a href="<%= crumb.href %>"><%= crumb.label %></a>
          <% } else { %>
            <span class="breadcrumb-current"><%= crumb.label %></span>
          <% } %>
        <% }); %>
      </div>
    <% } else { %>
      IM Planner
    <% } %>
  </div>
  <div class="nav-links">
    <a href="/">Experiments</a>
    <a href="/recipes">Recipes</a>
    <% if (currentUser && (currentUser.role === "admin" || currentUser.role === "manager" || currentUser.role === "engineer")) { %>
      <a href="/param-library">Parameters</a>
    <% } %>
    <a href="/machines">Machines</a>
    <% if (currentUser && currentUser.role === "admin") { %>
      <a href="/admin">Admin</a>
    <% } %>
  </div>
  <% if (currentUser) { %>
    <div class="nav-auth">
      <span class="nav-user">
        <a href="/me"><%= currentUser.name ? currentUser.name : currentUser.email %></a>
      </span>
      <form method="post" action="/auth/logout">
        <button class="pure-button pure-button-primary" type="submit">Logout</button>
      </form>
    </div>
  <% } %>
</nav>
